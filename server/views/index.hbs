<!doctype html>
<html lang="pt">
<head>
  <meta charset="utf-8">
  <title>Procrast Nation</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Abel|Sacramento">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/principal.css">
</head>
<body>
    <article class="login">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3">
                    <h1 class="text-center login-title">Procrast Nation</h1>
                    <div class="account-wall">                    
                        <img src="images/LazyKing_Flag.png" class="img-responsive" alt="Procrast Nation"/>
                        <form class="form-signin">
                        <input type="text" class="form-control" placeholder="Email" required autofocus>
                        <input type="password" class="form-control" placeholder="Password" required>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Entrar</button>
                        <label class="checkbox text-center">
                            <input type="checkbox" value="remember-me">
                            Lembrar de mim
                        </label>
                        </form>
                    </div>
                    <a href="#" class="text-center new-account">Criar nova conta </a>
                </div>
            </div>
        </div>
    </article>
</body>
</html>
