<!doctype html>
<html lang="pt">
    <head>
        <meta charset="utf-8">
        <title>Procrast Nation</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Abel|Sacramento">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/css/calendario/calendar.min.css">
        <link rel="stylesheet" href="/css/calendario.css">
        <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
        <link rel="icon" href="images/favicon.ico" type="image/x-icon">
    </head>
    <body>
        <nav role="navigation" class="navbar navbar-default" id="navegacao">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand"><img src="/images/LazyKing.png" class="img-responsive"/><span class="login-title">Procrast Nation</span></a>
            </div>
            <!-- Collection of nav links and other content for toggling -->
            <div id="navbarCollapse" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#" data-toggle="modal" data-target="#addEvent">Add Tarefa</a></li>
                    <li><a href="../logout">Logout</a></li>
                </ul>
            </div>
        </nav>
        <article>
            <div class="container">
                <div class="page-header">
                    <div class="pull-right form-inline">
                        <div class="btn-group">
                            <button class="btn btn-primary" data-calendar-nav="prev"><< Anterior</button>
                            <button class="btn" data-calendar-nav="today">Hoje</button>
                            <button class="btn btn-primary" data-calendar-nav="next">Próximo >></button>
                        </div>
                        <div class="btn-group btn-group-views">
                            <button class="btn btn-primary" data-calendar-view="year">Ano</button>
                            <button class="btn btn-primary" data-calendar-view="month">Mês</button>
                            <button class="btn btn-primary" data-calendar-view="week">Semana</button>
                            <button class="btn btn-primary" data-calendar-view="day">Dia</button>
                        </div>
                    </div>
                    <h3></h3>
                </div>
                <div class="row calendario">
                    <div class="span9">
                        <div id="calendar"></div>
                    </div>
                </div>
            </div>
            
            
            
            <!-- Modal -->
              <div class="modal fade" id="addEvent" role="dialog">
                <div class="modal-dialog">

                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">Adicionar Tarefa</h4>
                    </div>
                    <div class="modal-body">
                      <form id="form-add-tarefa" method="POST">
                          <label for="nome">Nome</label>
                        <input id="rg-nome" type="text" name="nome" class="form-control" placeholder="Nome" required autofocus>                   
                          <label for="desc">Descrição</label>
                          <textarea id="rg-desc" name="desc" class="form-control" placeholder="Descrição (opcional)"></textarea>
                          <label for="dt_ini">Data Inicial</label>
                        <input id="rg-dt_ini" type="date" name="dt_ini" class="form-control data" placeholder="Data Inicial (dd/mm/yyyy)" required>
                          <label for="hr_ini">Hora Inicial</label>
                        <input id="rg-hr_ini" type="time" name="hr_ini" class="form-control hora" placeholder="Horário Inicial (HH:MM)" required>
                          <label for="dt_fim">Data Final</label>
                        <input id="rg-dt_fim" type="date" name="dt_fim" class="form-control data" placeholder="Data Final (dd/mm/yyyy)" required>
                          <label for="hr_fim">Hora Final</label>
                        <input id="rg-hr_fim" type="time" name="hr_fim" class="form-control hora" placeholder="Horário Final (HH:MM)" required>  
                        <div class="modal-footer">
                            <button class="btn btn-lg btn-success" type="submit" data-dismiss="modal" id="addTarefa">
                                Adicionar!</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                        </div>
                        </form>
                    </div>
                  </div>

                </div>
              </div>
        </article>
        <script type="text/javascript" src="/js/jquery.min.js"></script>
        <script type="text/javascript" src="/js/underscore-min.js"></script>
        <script type="text/javascript" src="/js/calendario/bootstrap.min.js"></script>
        <script type="text/javascript" src="/js/calendario/pt-BR.js"></script>    
        <script type="text/javascript" src="/js/calendario/calendar.min.js"></script>
        <script type="text/javascript" src="/js/calendario.js"></script>
    </body>
</html>
